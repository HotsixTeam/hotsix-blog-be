{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es2018",
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "types": ["jest", "node"],
    "typeRoots": ["./node_modules/@types", "./src/types"]

  },
  "include": ["src/**/*", "tests/**/*", "src"],
  "exclude": ["node_modules"]
}